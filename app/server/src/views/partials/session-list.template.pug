table.table.table-hover.table-striped
    tr
        th Animal
        th Start Date
        th Duration
        //- th Field of View
        th Run
        th Samples
        th Imaging Rate
    tr(ng-repeat="session in $ctrl.sessions" ng-click="$ctrl.goToSession(session._id)")
        //- Nest an <a> in each <td> so that the row will be clickable when
        //- combined with some CSS magic
        td(ng-repeat="key in ['Animal', 'start_time', 'duration', 'Run', 'nSamples', 'volRate']")
            a(href='/trial/{{session._id}}') {{session[key]}}
